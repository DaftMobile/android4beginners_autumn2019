<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.daftmobile.android4beginners5.VendingActivity"
    >

    <com.google.android.material.button.MaterialButton
        android:id="@+id/depositButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deposit_coin_label"
        app:icon="@drawable/ic_coin_black_24dp"
        />

    <TextView
        android:id="@+id/depositTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?textAppearanceSubtitle1"
        tools:text="You've deposited 0 coins"
        />


    <EditText
        android:id="@+id/barNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="@string/enter_choco_bar_name_hint"
        android:inputType="textCapWords"
        />

    <Button
        android:id="@+id/vendButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/vend_label"
        />

    <TextView
        android:id="@+id/vendedItemTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textAlignment="center"
        android:textAppearance="?textAppearanceHeadline5"
        tools:text="Silky way"
        />

</LinearLayout>
